<h3>Edit <%= @sub.title %></h3>

<form action="<%= sub_url(@sub) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <%= auth_token %>
  <label for="sub_title">Title</label>
  <input type="text" name="sub[title]" value="<%= @sub.title %>" id="sub_title">

  <label for="sub_description">Description</label>
  <textarea name="sub[description]" id="sub_description"></textarea>

  <input type="submit" value="Submit">
</form>
